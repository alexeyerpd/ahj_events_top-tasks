{
    "plugins": ["prettier"],
    "extends": ["eslint:recommended", "plugin:prettier/recommended"],
    "env": {
        "es6": true,
        "browser": true,
        "jest/globals": true
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": "latest"
    },
    "rules": {
        "no-unused-vars": "warn",
        "indent": ["error", 4]
    },
    "overrides": [
        {
            "files": ["**/*.test.js"],
            "plugins": ["jest"],
            "extends": ["plugin:jest/recommended"],
            "rules": {
                "jest/prefer-expect-assertions": "off",
                "indent": [4, "tab"]
            }
        }
    ]
}
